{
    "compilerOptions": {
        "target": "ES2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true
    },
    "exclude": [
        "dist", "node_modules", "jest.config.ts", "src/**/*.test.tsx", "src/**/*.stories.tsx"
    ]
}